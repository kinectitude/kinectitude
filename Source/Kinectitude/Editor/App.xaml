<Application x:Class="Kinectitude.Editor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:v="clr-namespace:Kinectitude.Editor.Views"
             xmlns:vm="clr-namespace:Kinectitude.Editor.ViewModels"
             StartupUri="Views\WorkspaceWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Icons.xaml" />
                <ResourceDictionary Source="Resources\Styles.xaml" />
                <ResourceDictionary Source="Resources\Simple Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <v:FolderConverter x:Key="folderConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
