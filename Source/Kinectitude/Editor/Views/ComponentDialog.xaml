<Window x:Class="Kinectitude.Editor.Views.ComponentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Kinectitude.Editor.ViewModels"
        Title="Choose a Component..."
        ResizeMode="NoResize"
        Height="600"
        Width="400">
    <DockPanel>

        <Border DockPanel.Dock="Bottom" Padding="4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnCancel" IsCancel="True" Width="100" Margin="0,0,4,0">Cancel</Button>
                <Button Name="btnOK" IsDefault="True" Click="btnOK_Click" Width="100">OK</Button>
            </StackPanel>
        </Border>

        <Separator DockPanel.Dock="Bottom" />

        <ListBox ItemsSource="{Binding Source={x:Static vm:Workspace.Instance}, Path=ComponentPlugins}" SelectedItem="{Binding SelectedComponent}">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type vm:PluginViewModel}">
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.Resources>
        </ListBox>
    </DockPanel>
</Window>
